---
import BackToPrevious from '@components/BackToPrevious.astro'
import Container from '@components/Container.astro'
import { SITE } from '@consts'
import Layout from '@layouts/Layout.astro'

export const prerender = true
---

<Layout title="404" description={SITE.DESCRIPTION}>
	<Container>
		<div class="mt-16 grid place-items-center gap-3">
			<h4 class="text-2xl font-semibold text-black dark:text-white">404: Page not found</h4>
			<span>
				<BackToPrevious href="/">Go to home</BackToPrevious>
			</span>
		</div>
	</Container>
</Layout>
